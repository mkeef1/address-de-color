doctype html
html
  head 
    meta(charset="utf-8")
    title Address de Color
    link(rel='stylesheet', href="/css/style.css")
  body
    h1 Address de Color
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') FAQ
        li: a(href='/contact') Contact
        li: a(href='/people') People
    h2 People Page

    each person in people
      .person
        div(style='display:inline-block;background-color:#{person.color};margin-right:10px')
          ul
            li=person.name
            li=person.email
            li=person.phone
            li=person.color
            li=person.website
